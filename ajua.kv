            BoxLayout:
                orientation: "horizontal"
                size_hint_y: 0.2
                Label:
                    font_size: "40dp"
                    text: "{}".format(root.p2home)
                    size_hint_x: 0.15
                GridLayout:
                    cols: 6
                    size_hint_x: 0.70
                    Label:
                        font_size: "30dp"
                        text: "{}".format(root.p2cup6)
                    Label:
                        font_size: "30dp"
                        text: "{}".format(root.p2cup5)
                    Label:
                        font_size: "30dp"
                        text: "{}".format(root.p2cup4)
                    Label:
                        font_size: "30dp"
                        text: "{}".format(root.p2cup3)
                    Label:
                        font_size: "30dp"
                        text: "{}".format(root.p2cup2)
                    Label:
                        font_size: "30dp"
                        text: "{}".format(root.p2cup1)
                Label:
                    size_hint_x: 0.15




            BoxLayout:
                orientation: "horizontal"
                size_hint_y: 0.4
                Label:
                    text: 'P2 HOME'
                    size_hint_x: 0.15
                    canvas.before:
                        Rectangle:
                            pos: self.pos
                            size: self.size
                            source: 'player2home.png'
                GridLayout:
                    cols: 6
                    size_hint_x: 0.70

                    # PLAYER 2 BUTTONS
                    Button:
                        id: p2btn6
                        text: "P2Btn6"
                        background_normal: 'player2cup.png'
                        background_down: 'player2cup_selected.png'
                        on_release: root.player_selection(2, 6)
                    Button:
                        id: p2btn5
                        text: "P2Btn5"
                        background_normal: 'player2cup.png'
                        background_down: 'player2cup_selected.png'
                        on_release: root.player_selection(2, 5)
                    Button:
                        id: p2btn4
                        text: "P2Btn4"
                        background_normal: 'player2cup.png'
                        background_down: 'player2cup_selected.png'
                        on_release: root.player_selection(2, 4)
                    Button:
                        id: p2btn3
                        text: "P2Btn3"
                        background_normal: 'player2cup.png'
                        background_down: 'player2cup_selected.png'
                        on_release: root.player_selection(2, 3)
                    Button:
                        id: p2btn2
                        text: "P2Btn2"
                        background_normal: 'player2cup.png'
                        background_down: 'player2cup_selected.png'
                        on_release: root.player_selection(2, 2)
                    Button:
                        id: p2btn1
                        text: "P2Btn1"
                        background_normal: 'player2cup.png'
                        background_down: 'player2cup_selected.png'
                        on_release: root.player_selection(2, 1)
                    # END PLAYER 2 BUTTONS

                    # PLAYER 1 BUTTONS
                    Button:
                        id: p1btn1
                        text: "P1Btn1"
                        on_release: root.player_selection(1, 1)
                    Button:
                        id: p1btn2
                        text: "P1Btn2"
                        on_release: root.player_selection(1, 2)
                    Button:
                        id: p1btn3
                        text: "P1Btn3"
                        on_release: root.player_selection(1, 3)
                    Button:
                        id: p1btn4
                        text: "P1Btn4"
                        on_release: root.player_selection(1, 4)
                    Button:
                        id: p1btn5
                        text: "P1Btn5"
                        on_release: root.player_selection(1, 5)
                    Button:
                        id: p1btn6
                        text: "P1Btn6"
                        on_release: root.player_selection(1, 6)
                    # END PLAYER 1 BUTTONS

                Label:
                    text: 'P1 HOME'
                    size_hint_x: 0.15
                    canvas.before:
                        Rectangle:
                            pos: self.pos
                            size: self.size
                            source: 'player1home.png'



            BoxLayout:
                orientation: "horizontal"
                size_hint_y: 0.2
                Label:
                    size_hint_x: 0.15
                GridLayout:
                    cols: 6
                    size_hint_x: 0.70
                    Label:
                        font_size: "30dp"
                        text: "{}".format(root.p1cup1)
                    Label:
                        font_size: "30dp"
                        text: "{}".format(root.p1cup2)
                    Label:
                        font_size: "30dp"
                        text: "{}".format(root.p1cup3)
                    Label:
                        font_size: "30dp"
                        text: "{}".format(root.p1cup4)
                    Label:
                        font_size: "30dp"
                        text: "{}".format(root.p1cup5)
                    Label:
                        font_size: "30dp"
                        text: "{}".format(root.p1cup6)
                Label:
                    font_size: "40dp"
                    text: "{}".format(root.p1home)
                    size_hint_x: 0.15




