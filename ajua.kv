AjuaRoot:

<CustomLayout>
    canvas.before:
        BorderImage:
            # BorderImage behaves like the CSS BorderImage
            border: 10, 10, 10, 10
            texture: self.background_image.texture
            pos: self.pos
            size: self.size

<AjuaRoot>:
    p2btn1: p2btn1
    p2btn2: p2btn2
    p2btn3: p2btn3
    p2btn4: p2btn4
    p2btn5: p2btn5
    p2btn6: p2btn6
    p1btn1: p1btn1
    p1btn2: p1btn2
    p1btn3: p1btn3
    p1btn4: p1btn4
    p1btn5: p1btn5
    p1btn6: p1btn6
    CustomLayout:
        BoxLayout:
            orientation: 'vertical'


